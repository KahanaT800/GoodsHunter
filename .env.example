# ==============================
# 1. 镜像与部署配置
# ==============================
REPO_OWNER=

# ==============================
# 2. SSL / Certbot 配置
# ==============================
DOMAIN_NAME=goods-hunter.com
CERT_EMAIL=example@gmail.com

# ==============================
# 3. MySQL 配置
# ==============================
MYSQL_ROOT_PASSWORD=example
DB_HOST=mysql
DB_PORT=3306
DB_USER=root
DB_PASSWORD=example
DB_NAME=goodshunter
# DB_DSN=root:example@tcp(mysql:3306)/goodshunter?parseTime=true&loc=Local

# ==============================
# 4. Redis 配置
# ==============================
REDIS_ADDR=redis:6379
REDIS_PASSWORD=example

# ==============================
# 5. 应用配置
# ==============================
APP_ENV=production
APP_LOG_LEVEL=info
APP_HTTP_ADDR=:8080
APP_CRAWLER_GRPC_ADDR=crawler:50051
APP_SCHEDULE_INTERVAL=5m
APP_NEW_ITEM_DURATION=1h
APP_MAX_ITEMS_PER_TASK=300
APP_WORKER_POOL_SIZE=50
APP_QUEUE_CAPACITY=1000
APP_GUEST_IDLE_TIMEOUT=10m
APP_GUEST_HEARTBEAT=5m
APP_MAX_TASKS_PER_USER=3

# ==============================
# 6. Crawler 配置
# ==============================
BROWSER_BIN_PATH=/usr/bin/chromium-browser
CHROME_BIN=/usr/bin/chromium-browser
BROWSER_HEADLESS=true
BROWSER_MAX_CONCURRENCY=5
BROWSER_MAX_FETCH_COUNT=50

# ==============================
# 7. 安全配置
# ==============================
JWT_SECRET=example
INVITE_CODE=example

# ==============================
# 8. 邮件通知
# ==============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
